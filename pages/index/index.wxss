page{
  display: flex;
  flex-direction: column;
  background: #17181a;
  color:#ccc;
  height: 100%;
}
/*tab标签*/
.tab{
  display: flex;
}
.tab-item{
  flex: 1;
  font-size: 10pt;
  line-height: 72rpx;
  text-align: center;
  border-bottom: 6rpx solid #eee;
}
.tab-item.active{
  color:#c25b5b;
  border-bottom-color: #c25b5b;
}
/*内容部分*/
.content{
  flex:1;
}
.content>swiper{
  height: 100%;
}
.content-info{
  height: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
/*轮播图*/
.content-info-slide{
  height: 302rpx;
  margin-bottom: 20px;
}
.content-info-slide image{
  width: 100%;
  height: 100%;
}
/*功能按钮*/
.content-info-portal{
  display: flex;
}
.content-info-portal>view{
  flex:1;
  text-align: center;
}
.content-info-portal image{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 20px auto;
}
/*热门音乐*/
.content-play{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  text-align: center;
}
.content-play-info>view{
  color: #888;
  font-size: 11pt;
}
@keyframes rotateImage{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
.content-play-cover>image{
     animation: rotateImage 10s linear infinite;
     width: 600rpx;
     height: 600rpx;
     border-radius: 50%;
     border: 1px solid #333;
     
}
.content-info-list{
  font-size: 11pt;
  margin: 20rpx;
}
.content-info-list>.list-inner{
  display: flex;
  flex-wrap: wrap;/*换行*/
  margin: 10rpx 20rpx;
}
.content-info-list>.list-inner>.list-item {
  flex:1;
}
.content-info-list>.list-inner>.list-item>image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 5rpx auto;
  border-radius: 10rpx;
  border: 1rpx solid #555;
}
.content-info-list>.list-inner>.list-item>view{
  text-align: center;
  width: 200rpx;
  margin: 0rpx auto;
  font-size: 10pt;
}
/*底部播放器部分*/
.player{
  background: #222;
  border-top: 1px solid #252525;
  height: 112rpx;
  padding-top: 12rpx;
  display: flex;
}
.player-cover{
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  border: 1px solid #333;
}
.up{
  transform: rotate(180deg);
}
.player-info{
  flex: 1;
  font-size: 38rpx;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}
.player-info-singer{
  font-size:30rpx;
  color: #888;
}
.player-controls image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}
.content-play-progress{
  display: flex;
  align-items: center;
  margin: 0px 35rpx;
  font-size: 9pt;
  text-align: center;
}
.content-play-progress>slider{
  flex:1;
}
/*播放列表*/
.content-playlist{
   
}
.playlist-item{
    display: flex;
    border: 1px solid #333;
    height: 112rpx;
    align-items: center;
}
.playlist-cover{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin: 15rpx;
  border: 1px solid #333;
}
.playlist-info{
  flex:1;
  font-size:10pt;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}
.playlist-info-singer{
  color:#888
}
.playlsit-controls{
  font-size: 10pt;
  margin-right: 20rpx;
  color: #c25b5b;
}